{
	"name": "pb-sv",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"predev:backend": "npm run typegen & cd ../backend && ./pocketbase serve --dev",
		"dev": "concurrently 'npm run predev:backend' 'vite dev'",
		"prebuild": "npm run typegen",
		"build": "vite build && npm run deploy:static",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"typegen": "pocketbase-typegen --db ../backend/pb_data/data.db --out ./src/lib/types/pocketbase-types.ts",
		"deploy:static": "bash -lc 'set -euo pipefail; mkdir -p ../backend/pb_public; find ../backend/pb_public -mindepth 1 -maxdepth 1 -exec rm -rf {} +; cp -R build/. ../backend/pb_public/'"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@playwright/test": "^1.55.1",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.18",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.4",
		"concurrently": "9.2.1",
		"daisyui": "^5.3.10",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"playwright": "^1.55.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vite": "^7.1.7",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"dependencies": {
		"@lucide/svelte": "^0.548.0",
		"pocketbase": "^0.26.3"
	}
}